{
  "name": "assignment_99tech_playwright",
  "version": "1.0.0",
  "description": "OrangeHRM Test Automation Framework using Playwright with TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:login": "playwright test tests/login/",
    "test:search": "playwright test tests/search/",
    "test:api": "playwright test tests/api/",
    "test:api:auth": "playwright test tests/api/auth.api.test.ts",
    "test:api:employee": "playwright test tests/api/employee.api.test.ts",
    "test:api:integration": "playwright test tests/api/integration.api.test.ts",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "report": "playwright show-report",
    "report:open": "npx playwright show-report --host=0.0.0.0 --port=9323",
    "clean": "rm -rf test-results playwright-report",
    "setup": "npx playwright install",
    "setup:deps": "npx playwright install-deps",
    "lint": "tsc --noEmit",
    "test:smoke": "playwright test --grep=\"@smoke\"",
    "test:regression": "playwright test --grep=\"@regression\"",
    "test:security": "playwright test --grep=\"@security\"",
    "test:performance": "playwright test --grep=\"@performance\"",
    "test:integration": "playwright test --grep=\"@integration\"",
    "test:functional": "playwright test --grep=\"@functional\"",
    "test:negative": "playwright test --grep=\"@negative\"",
    "test:edge": "playwright test --grep=\"@edge\"",
    "test:ci": "playwright test --reporter=junit --output-dir=test-results/junit",
    "test:api:ci": "playwright test tests/api/ --reporter=junit --output-dir=test-results/api-junit",
    "generate:excel": "node scripts/generate-excel-testcases.js"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "orangehrm",
    "e2e"
  ],
  "author": "Test Automation Engineer",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "xlsx": "^0.18.5"
  }
}
